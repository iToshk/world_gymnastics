    #p1.li
      h4 ng-bind="balance_beam_group_1"

      table.table.table-bordered.table-hover.table-condensed.table-striped
        thead
          tr
            th width="5%" ng-bind="number_of_skill"
            th width="4%" ng-bind="dificulty_of_skill"
            th width="75%" ng-bind="name_of_skill"
            th width="16%" ng-bind="sample_link"

        tbody
          .row.container.col-md-12
            tr ng-repeat="balance_beam_group_1_skill in balance_beam_group_1_skills"
              td width="5%" ng-bind="'I-' + balance_beam_group_1_skill.number_of_skill"
              td width="4%" ng-bind="balance_beam_group_1_skill.dificulty_of_skill"
              td width="75%" ng-bind="balance_beam_group_1_skill.name_of_skill"
              td width="16%"
